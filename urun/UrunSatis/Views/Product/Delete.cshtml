@model urun.Models.Product
@{
    ViewData["Title"] = "Ürün Sil";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="card">
    <div class="card-header bg-danger text-white">
        <h4>Ürün Silme Onayı</h4>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <h5>Bu ürünü silmek istediğinizden emin misiniz?</h5>
        </div>

        <dl class="row">
            <dt class="col-sm-3">Ürün Adı</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Kategori</dt>
            <dd class="col-sm-9">@Model.Category?.Name</dd>

            <dt class="col-sm-3">Fiyat</dt>
            <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <dt class="col-sm-3">Resim</dt>
                <dd class="col-sm-9">
                    <img src="@Model.ImagePath" alt="@Model.Name" style="max-width: 200px;" />
                </dd>
            }
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash"></i> Sil
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Listeye Dön
            </a>
        </form>
    </div>
</div> 
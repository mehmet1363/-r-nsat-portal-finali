@model IEnumerable<urun.Models.Product>
@{
    ViewData["Title"] = "Ürünler";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4>Ürün Listesi</h4>
    <a href="@Url.Action("Create")" class="btn btn-primary">
        <i class="fas fa-plus"></i> Yeni Ürün Ekle
    </a>
</div>

<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Resim</th>
                <th>Ürün Adı</th>
                <th>Kategori</th>
                <th>Fiyat</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ImagePath))
                        {
                            <img src="@item.ImagePath" alt="@item.Name" style="max-width: 50px;" />
                        }
                    </td>
                    <td>@item.Name</td>
                    <td>@item.Category?.Name</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-primary btn-sm">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div> 